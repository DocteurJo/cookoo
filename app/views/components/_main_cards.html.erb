<div class="cards-container">
  <div class="cards" id="meal-results">
    <% meals.each do |meal| %>
      <%= link_to meal_path(meal), class: 'link-to-text-color' do %>
        <div class="card-trip">
          <img src=<%= meal.photo %> />
          <div class="card-trip-infos">
            <div>
              <div class="meal-infos">
                <h2><%= meal.title %></h2>
                <p><%= meal.category %></p>
              </div>
            </div>
            <img src="<%= meal.cook.photo%>" class="card-trip-user avatar-bordered" />
            <div class="d-flex justify-content-between rating-index" style="">
              <div>
                <p class="card-trip-pricing">EUR â‚¬<%= meal.price %></p>
              </div>
              <div>
                <% meal.cook.average_rating.times do %>
                <i class="fas fa-star"></i>
                <% end %>
              </div>
             </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
